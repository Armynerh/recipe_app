<!-- app/views/foods/index.html.erb -->
<br>
<%= link_to 'Add Food', new_food_path, class: 'btn-link' %>

<table>
 <% if @foods && @foods.any? %>
 <thead>
 <tr>
          <th>Food</th>
          <th>Measurement Unit</th>
          <th>Unit Price</th>
          <th>Actions</th>
        </tr>
</thead>
<tbody>
    <% @foods.each do |food| %>
      <tr>
        <td>
        <%= food.name %>
        </td>
        <td>
        <%= food.unit %>
        </td>
        <td>
        <%= number_to_currency(food.price) %>
        </td>
        <td>
         <%= link_to 'Delete', food_path(food), data: { turbo_method: :delete, confirm:'are you sure you want to delete this?' }%>
        </td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
    <li>No foods available.</li>
  <% end %>
</table>

